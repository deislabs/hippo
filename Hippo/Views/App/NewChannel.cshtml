@model Hippo.ViewModels.AppNewChannelForm

<h2>Reconfigure a channel</h2>

<form asp-action="NewChannel">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="ChannelName" class="control-label"></label>
        <input asp-for="ChannelName" class="form-control" />
        <span asp-validation-for="ChannelName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SelectedRevisionSelectionStrategy" class="control-label"></label>
        <select asp-for="SelectedRevisionSelectionStrategy" asp-items="Model.RevisionSelectionStrategies" class="form-control">
            <option value="">Select revision selection strategy</option>
        </select>
        <span asp-validation-for="SelectedRevisionSelectionStrategy" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SelectedRevisionNumber" class="control-label"></label>
        <select asp-for="SelectedRevisionNumber" asp-items="Model.Revisions" class="form-control">
            <option value="">Select revision to update to</option>
        </select>
        <span asp-validation-for="SelectedRevisionNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SelectedRevisionRule" class="control-label"></label>
        <input asp-for="SelectedRevisionRule" asp-items="Model.Revisions" class="form-control" />
        <span asp-validation-for="SelectedRevisionRule" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EnvironmentVariables" class="control-label"></label>
        <textarea asp-for="EnvironmentVariables" asp-items="Model.EnvironmentVariables" class="form-control">
        </textarea>
        <span asp-validation-for="EnvironmentVariables" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Domain" class="control-label"></label>
        <input asp-for="Domain" asp-items="Model.Domain" class="form-control" />
        <span asp-validation-for="Domain" class="text-danger"></span>
    </div>
    <div class="form-group btn-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
